{
  "compilerOptions": {
    /* Target and Language Features */
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Module Resolution and Imports */
    "moduleResolution": "node", // More common than "bundler", ensure compatibility with Node.js resolution
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".", // Required for paths
    "paths": {
      "@/*": ["src/*"] // Alias configuration
    },

    /* JSX */
    "jsx": "react-jsx",

    /* Emit and Type Checking */
    "skipLibCheck": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],

  /* Project References */
  "references": [{ "path": "./tsconfig.node.json" }]
}
